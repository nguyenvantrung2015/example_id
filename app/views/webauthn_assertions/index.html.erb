<div class="container-fluid register-box vh-100 my-0 align-items-center d-flex">
  <form class="register-form p-md-4 w-100">
    <p class="h4 fw-bold text-center pt-4 mb-5">Sign In By <span class="fa fa-fingerprint text-warning"></span></p>
    <div class="mb-4">
      <input class="form-control" placeholder="Email address" required="required" type="email" id="email"  />
    </div>
    <div class="mb-4">
      <input value="SIGN IN" class="btn btn-primary d-block w-100" id="webauthn-login" />
    </div>
    <div class="text-center">
      <%= link_to "Sign Up", new_user_registration_path, class: "text-decoration-none"  %>
    </div>
  </form>
</div>

<%= javascript_pack_tag 'webauthn_assertions.js'%>