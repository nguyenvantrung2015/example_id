<div class="container-fluid register-box vh-100 my-0 align-items-center d-flex">
  <%= form_for :user, url: sign_up_path, method: :post, html: { class: "register-form p-md-4 w-100" } do |f| %>
    <p class="h4 fw-bold text-center pt-4 mb-5">Sign Up</p>
    <div class="mb-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address", required: true%>
    </div>
    <div class="mb-4">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "Password", required: true %>
    </div>
    <div class="mb-4">
      <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password", required: true %>
    </div>
    <div class="mb-4 d-flex align-items-center justify-content-center">
      <label for="check" class="d-flex align-items-center justify-content-center ">
        <input type="checkbox" id="check"> <span class="ms-2 textmuted">Subscrible to our newsletter</span> </label>
    </div>
    <div class="mb-4">
      <%= f.submit "SIGN UP", class: "btn btn-primary d-block w-100" %>
    </div>
    <p class="text-center textmuted"> or sign up with:</p>
    <div class="pb-4">
      <ul class="d-flex align-items-center justify-content-center list-unstyled icons">
        <li class="icon me-3"><span class="fab fa-facebook"></span></li>
        <li class="icon me-3"><span class="fab fa-google-plus"></span></li>
        <li class="icon me-3"><span class="fab fa-twitter"></span></li>
        <li class="icon "><span class="fab fa-github"></span></li>
      </ul>
    </div>
  <% end %>
</div>
